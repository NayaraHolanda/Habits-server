// npx prisma migrate dev - para criar a migração (igual versionamento do git)
// npx prisma studio - para visualizar o BD

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime

  @@map("habits")
}
